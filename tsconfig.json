{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "sourceMap": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["./node_modules"]
}
